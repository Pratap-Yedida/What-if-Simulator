{
  "name": "what-if-simulator-backend",
  "version": "1.0.0",
  "description": "Backend API for What-If Storytelling Simulator",
  "private": true,
  "scripts": {
    "dev": "nodemon src/server-simple.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "db:migrate": "node dist/database/migrate.js",
    "db:seed": "node dist/database/seed.js",
    "db:reset": "node dist/database/reset.js",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "axios": "1.6.2",
    "bcryptjs": "2.4.3",
    "compression": "1.7.4",
    "compromise": "14.10.0",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "7.1.5",
    "express-validator": "7.0.1",
    "helmet": "7.1.0",
    "ioredis": "5.3.2",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "natural": "6.7.0",
    "node-cron": "3.0.3",
    "nodemailer": "6.9.7",
    "openai": "4.20.1",
    "pg": "8.11.3",
    "redis": "4.6.11",
    "sentiment": "5.0.2",
    "sharp": "0.33.0",
    "socket.io": "4.7.4",
    "uuid": "9.0.1",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@prisma/client": "5.7.0",
    "@types/bcryptjs": "2.4.6",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.8",
    "@types/jsonwebtoken": "9.0.5",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.11",
    "@types/node": "20.10.4",
    "@types/nodemailer": "6.4.14",
    "@types/pg": "8.10.9",
    "@types/supertest": "2.0.16",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.0.1",
    "jest": "29.7.0",
    "nodemon": "3.0.2",
    "prettier": "3.1.1",
    "prisma": "5.7.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.3.3"
  }
}
